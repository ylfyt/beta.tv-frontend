            <local:VideoPlayer />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Profile" IconImageSource="Vector.png">
        <x:Arguments>
            <local:Profile />
        </x:Arguments>
    </NavigationPage>
