  <ContentPage Title="Tab 1" />
  <ContentPage Title="Tab 2" />
  <ContentPage Title="Tab 3" />-->

    <NavigationPage Title="Home" IconImageSource="carbon_home.png">
        <x:Arguments>
            <local:Homepage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Search" IconImageSource="bx_search.png">
        <x:Arguments>
            <local:SearchPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Subscription" IconImageSource="ic_sharp_subscriptions.png">
