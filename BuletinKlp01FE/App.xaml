<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuletinKlp01FE.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="NavigationPage" >
                <Setter Property="BarBackgroundColor" Value="#FFFFFF"/>
                <Setter Property="BarTextColor" Value="{x:DynamicResource Color0}" />
                
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="tim" />
            </Style>
            <Style x:Key="InvalidStyle" TargetType="Entry">
                <Setter Property="TextColor" Value="Red"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="TextTransform" Value="None"></Setter>
            </Style>
            <Color x:Key="Color0">#3F72AF</Color>
            <Color x:Key="Color1">#112D4E</Color>
            <Color x:Key="Color5">#DBE2EF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>